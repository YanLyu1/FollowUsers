<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="test.htm">testController</prop>
                <prop key="register.htm">registerController</prop>
                <prop key="login.htm">loginController</prop>
                <prop key="changeStatus.htm">statusController</prop>
                <prop key="uploadArticle.htm">ArticleController</prop>
                <prop key="browseArticle.htm">ArticleController</prop>
                <prop key="browseLikedArticle.htm">ArticleController</prop>
                <prop key="editArticle.htm">ArticleController</prop>
                <prop key="likeArticle.htm">ArticleController</prop>
                <prop key="addComment.htm">ArticleController</prop>
                <prop key="viewArticle.htm">ArticleController</prop>
                <prop key="search.htm">SearchController</prop>
                <prop key="follow.htm">followController</prop>
                <prop key="browseFriends.htm">followController</prop>
                <prop key="browseFans.htm">followController</prop>
                <prop key="navigation.htm">navigationController</prop>
                <prop key="friendArticle.htm">friendArticleController</prop>
                <prop key="fogetPassword.htm">forgetPasswordController</prop>
                <prop key="resetInformation.htm">resetInformationController</prop>
                <prop key="addCategory.htm">addCategoryController</prop>
                <prop key="deleteArticle.htm">deleteArticleController</prop>
                <prop key="changeLanguage.htm">changeLanguageController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    <bean name="testController" class="com.neu.controller.TestController"/>
    <bean name="registerController" class="com.neu.controller.RegisterController"/>
    <bean name="loginController" class="com.neu.controller.LonginController"/>
    <bean name="statusController" class="com.neu.controller.StatusController"/>
    <bean name="ArticleController" class="com.neu.controller.ArticleController"/>
    <bean name="SearchController" class="com.neu.controller.SearchController"/>
    <bean name="followController" class="com.neu.controller.FollowUserController"/>
    <bean name="navigationController" class="com.neu.controller.NavigationController"/>
    <bean name="friendArticleController" class="com.neu.controller.FriendArticleController"/>
    <bean name="forgetPasswordController" class="com.neu.controller.ForgetPasswordController"/>
    <bean name="resetInformationController" class="com.neu.controller.ResetInformationController"/>
    <bean name="addCategoryController" class="com.neu.controller.AddCategoryController"/>
    <bean name="deleteArticleController" class="com.neu.controller.DeleteArticleController"/>
    <bean name="changeLanguageController" class="com.neu.controller.ChangeLanguageController"/>
</beans>
