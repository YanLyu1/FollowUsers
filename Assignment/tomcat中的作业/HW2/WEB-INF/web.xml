<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet>
        <servlet-name>BuyBooks</servlet-name>
        <servlet-class>Part7_HW1_Books</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyBooks</servlet-name>
        <url-pattern>/addBooks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BuyComputers</servlet-name>
        <servlet-class>Part7_HW1_Computers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyComputers</servlet-name>
        <url-pattern>/addComputers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BuyMusics</servlet-name>
        <servlet-class>Part7_HW1_Musics</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyMusics</servlet-name>
        <url-pattern>/addMusics</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <welcome-file-list>
    <welcome-file>page_book.html</welcome-file>
  </welcome-file-list>
</web-app>
